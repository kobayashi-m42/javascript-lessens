<!DOCTYPE html>
<html lang="ja">
<head>
    <meta charset="UTF-8">
    <title>Image Uploader</title>
    <link rel="stylesheet" href="public/css/imageUploader.css">
</head>
<body>
    <form action="" method="post" enctype="multipart/form-data">
        <input type="hidden" name="MAX_FILE_SIZE" value="1048576">
        <input type="file" name="image">
        <input type="submit" value="upload">
    </form>
    <% if (Object.keys(successMessage).length !== 0) { %>
        <div class="msg success"><%= successMessage%></div>
    <% } %>
    <% if (Object.keys(errorMessage).length !== 0) { %>
        <div class="msg error"><%= errorMessage%></div>
    <% } %>
    <ul>
        <% const imagesLength = Object.keys(images).length %>
        <% for (let i = 0; i < imagesLength; i += 1) { %>
            <li>
                <a href="../images/<%= images[i].filename %>">
                    <img src="../images/<%= images[i].filename %>">
                </a>
            </li>
        <% } %>
    </ul>
</body>
</html>
